<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="730dp"
    android:fillViewport="false"
    android:background="@color/backgroundColor">


<LinearLayout
    android:layout_width="400dp"
    android:layout_height="730dp"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    >
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/scan_back"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:src="@mipmap/ic_back_foreground"
            android:scaleX="1.3"
            android:scaleY="1.3"/>
        <TextView
            android:id="@+id/tv_live_result"
            android:layout_width="match_parent"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:fontFamily="@font/arizonia"
            android:gravity="center"
            android:text="Poster Pro"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            />
    </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_gravity="center_horizontal"
       android:text="Scan Poster"
       android:textColor="@color/white"
       android:textSize="18sp"
       android:textStyle="bold"
       >

   </TextView>

    <ImageButton
        android:id="@+id/scan_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@mipmap/ic_roundcamera">

    </ImageButton>
    <TextView
        android:id="@+id/scan_cam_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Take a photo of the poster"
        android:textColor="@color/white"
        android:textSize="20sp">

    </TextView>

    <ImageButton
        android:id="@+id/scanupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:src="@mipmap/ic_image"
        android:scaleX="2"
        android:scaleY="2">

    </ImageButton>
    <TextView
        android:id="@+id/scanupload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Upload a poster picture"
        android:textColor="@color/white"
        android:textSize="20sp">

    </TextView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/holo_orange_light"
    android:layout_marginTop="80dp"
    android:textSize="16sp"
    android:layout_gravity="center_horizontal"
    android:paddingHorizontal="100dp"

    android:text="Simply scan poster and add events to your calendar !"
    >

</TextView>



</LinearLayout>
</ScrollView>