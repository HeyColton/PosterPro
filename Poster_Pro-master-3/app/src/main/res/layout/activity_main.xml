<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="412dp"
    android:layout_height="735dp"
    android:fillViewport="false"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="735dp"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        >
        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_home"
                android:layout_width="130dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_home"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:gravity="center"
                android:layout_marginLeft="30dp" />


            <TextView
                android:id="@+id/tv_live_result"
                android:layout_width="match_parent"
                android:layout_height="64dp"

                android:layout_marginRight="80dp"
                android:layout_weight="1"
                android:fontFamily="@font/arizonia"
                android:gravity="center"
                android:text="Poster Pro"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
             />

        </LinearLayout>




        <ImageButton
            android:id="@+id/mod_pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:src="@mipmap/ic_per_info_round">

        </ImageButton>

        <TextView
            android:id="@+id/mod_pi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Personal Information"
            android:textSize="20dp">

        </TextView>

        <ImageButton
            android:id="@+id/posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_posted_round"
            android:background="#00FFFFFF">

        </ImageButton>

        <TextView
            android:id="@+id/posted_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Posted History"
            android:textSize="20dp">

        </TextView>

        <ImageButton
            android:id="@+id/participated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_participated_round"
            android:background="#00FFFFFF">

        </ImageButton>

        <TextView
            android:id="@+id/participated_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Participated History"
            android:textSize="20dp"></TextView>

        <ImageButton
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleY="1.1"
            android:scaleX="1.1"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_logout_foreground"
            android:background="#00FFFFFF">

        </ImageButton>
    </LinearLayout>
</ScrollView>