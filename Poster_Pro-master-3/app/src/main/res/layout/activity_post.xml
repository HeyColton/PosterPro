<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="730dp"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/post_back"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@mipmap/ic_back_foreground" />
    <TextView
        android:id="@+id/tv_live_result"
        android:layout_width="match_parent"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:layout_height="64dp"
        android:fontFamily="@font/arizonia"
        android:gravity="center"
        android:text="Poster Pro"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"/>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Post Your Events!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Title"
        android:gravity="bottom"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="title here"
        android:inputType="textPersonName"
        android:background="@drawable/rect_10_white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Location"
        android:gravity="bottom"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_location"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="location here"
        android:background="@drawable/rect_10_white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Time"
        android:gravity="bottom"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_time"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="time here"
        android:background="@drawable/rect_10_white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Details"
        android:gravity="bottom"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_details"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="details here"
        android:background="@drawable/rect_10_white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/post_addposter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:src="@mipmap/ic_addposter_foreground"
            android:scaleX="2.5"
            android:scaleY="2.5"/>
        <ImageView
            android:id="@+id/post_poster"
            android:layout_marginVertical="10dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:src="@mipmap/ic_image"
            android:layout_height="wrap_content"
            android:textColorHint="#CCCCCC"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/post_it"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#00FFFFFF"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@mipmap/ic_postit_foreground" />


</LinearLayout>